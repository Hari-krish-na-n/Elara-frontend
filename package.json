{
  "name": "elara",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:app": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "vite build",
    "build:web": "vite build",
    "build:app": "npm run build:web && electron-builder -wml",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "-": "^0.0.1",
    "axios": "^1.13.2",
    "buffer": "^6.0.3",
    "compression": "^1.8.1",
    "g": "^2.0.1",
    "idb": "^8.0.3",
    "jsmediatags": "^3.9.7",
    "lightningcss": "^1.24.0",
    "lucide-react": "^0.553.0",
    "music-metadata-browser": "^2.5.11",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.10.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "vite": "npm:rolldown-vite@7.1.12",
    "vite-plugin-pwa": "^1.2.0",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.elara.app",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "asar": true,
    "extraResources": [
      {
        "from": "../elarabackend",
        "to": "backend"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.12"
  }
}
